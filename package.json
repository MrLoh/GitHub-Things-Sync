{
    "name": "things-github-sync",
    "version": "1.0.0",
    "main": "index.js",
    "author": "@MrLoh",
    "license": "MIT",
    "repository": "https://github.com/MrLoh/GitHub-Things-Sync",
    "scripts": {
        "start": "babel-node ./index.js",
        "develop": "nodemon ./index.js --exec babel-node"
    },
    "dependencies": {
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "knex": "^0.14.6",
        "lodash": "^4.17.10",
        "sqlite3": "^4.0.1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "flow-bin": "^0.75.0",
        "nodemon": "^1.17.5",
        "prettier": "^1.13.5"
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "plugins": [
            "transform-object-rest-spread",
            "transform-flow-strip-types"
        ]
    },
    "prettier": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "es5",
        "useTabs": false,
        "tabWidth": 2,
        "arrowParens": "always"
    }
}
